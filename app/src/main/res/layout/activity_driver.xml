<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suwan.godrivefinalproject.DriverActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/driveImg"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameDriver"
        android:layout_below="@+id/driveImg"
        android:hint="NAME"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/phoneDriver"
        android:layout_below="@+id/nameDriver"
        android:hint="PHONE"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:id="@+id/requestDriver"
        android:text="REQUEST"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:onClick="requestDriver"
        android:layout_below="@+id/phoneDriver"
        android:layout_marginTop="80dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/backDriver"
            android:text="BACK"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:onClick="backDriver"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/cancleDriver"
            android:text="CANCLE"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:onClick="cancleDriver"/>

    </LinearLayout>

</RelativeLayout>
