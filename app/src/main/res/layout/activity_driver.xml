<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suwan.godrivefinalproject.DriverActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/DriverImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#f1d374"
        android:src="@drawable/person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverName"
        android:layout_below="@+id/DriverImg"
        android:text="Name:"
        android:textSize="25dp"
        android:textColor="@color/text"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverPhone"
        android:layout_below="@+id/DriverName"
        android:text="Phone Number:"
        android:textSize="25dp"
        android:textColor="@color/text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:id="@+id/RequestBtn"
        android:layout_below="@+id/DriverPhone"
        android:text="Request Driver"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/logo"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:id="@+id/CancleBtn"
        android:layout_below="@+id/RequestBtn"
        android:text="Cancle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/logo"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
